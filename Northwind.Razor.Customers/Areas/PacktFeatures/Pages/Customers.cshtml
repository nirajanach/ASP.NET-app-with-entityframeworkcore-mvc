@page
@using Packt.Shared
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PacktFeatures.Pages.CustomersPageModel

<div class="row">
    <h1 class="display-2">Customers</h1>
</div>
<div class="row">
    @foreach (Customer customer in Model.Customers)
    {
        <div class="col-sm-3">
            <partial name="_Customer" model="customer" />
        </div>
    }
</div>